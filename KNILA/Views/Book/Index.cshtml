@model List<Book>
<partial name="_Notification" />
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Books</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
             <i class="bi bi-plus-circle"></i> Add Book</a>
        </div>

    </div>

</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Publisher</th>
            <th>Title</th>
            <th>Author Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
        <tr>
            <td>
                @book.Publisher
            </td>
                <td>
                    @book.Title
                </td>
                <td>
                    @book.AuthorFirstName @book.AuthorLastName
                </td>
                <td>
                    @book.Price
                </td>
                <td>
                <div class="w-75 btn-group" role="group">
                        <a asp-controller="Book" asp-action="Edit" asp-route-BookId="@book.BookId" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                        <a asp-controller="Book" asp-action="Delete" asp-route-BookId="@book.BookId" class="btn btn-danger mx-2">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>

                </div>
                </td>
               
        </tr>
        }
    </tbody>
</table>



